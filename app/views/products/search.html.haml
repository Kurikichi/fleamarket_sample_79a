.main--toppage
  = render partial: 'layouts/header'
.search-productBox
  .search-productLists
    - @products.each do |product|
      .search-productList
        = link_to product_path(product) do
          %figure.search-productList--img
            - product.images.each do |image|
              = image_tag "#{product.images[0].src}"
                -if product.exhibition_status == "売り切れ"
                .search-productList--img__items-sold
                  .search-productList--img__items-sold__inner 
                    SOLD
          .search-productList--body
            .search-product--name
              = product.name
            .search-details
              %ul
                %li
                  = "#{product.price}円(税込)" 
                  %i.fa.fa-star.likeIcon