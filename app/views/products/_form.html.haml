= form_with(model: product, local: true) do |form|
  - if product.errors.any?
    #error_explanation
      %h2
        = pluralize(product.errors.count, "error")
        prohibited this product from being saved:
      %ul
        - product.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :category_id
    = form.number_field :category_id
  .field
    = form.label :user_id
    = form.number_field :user_id
  .field
    = form.label :name
    = form.text_field :name
  .field
    = form.label :explanation
    = form.text_area :explanation
  .field
    = form.label :price
    = form.number_field :price
  .field
    = form.label :brand
    = form.text_field :brand
  .field
    = form.label :status
    = form.text_field :status
  .field
    = form.label :shipping_charges
    = form.number_field :shipping_charges
  .field
    = form.label :shipping_origin
    = form.text_field :shipping_origin
  .field
    = form.label :days_until_shipping
    = form.number_field :days_until_shipping
  .actions
    = form.submit
