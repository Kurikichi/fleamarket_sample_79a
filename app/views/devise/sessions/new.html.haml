.main-box
  .header-logo
    = render "layouts/header"
  .body-list
    .content
      .box
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .field-list
            .field
              = f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス", class: 'input-email'
            .field
              %br/
              = f.password_field :password, autocomplete: "current-password", placeholder:"パスワード", class: 'input-password'
            .actions
              = f.submit "ログイン", class: 'submit'
